<div style="padding: 10px;">
	<% form_for(reply, :url => {:action => "create"}) do |f| %>
		<b>Reply:</b><br/>
			<%= f.text_area :body%>
		<%= hidden_field_tag :receiver, reply.receiver.login %>
		<%= f.hidden_field :parent_id %>
		<%= f.hidden_field :subject %>
			<br/>
			<%= submit_tag 'Send' %>
	<% end %>
</div>